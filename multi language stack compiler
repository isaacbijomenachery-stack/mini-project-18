JS code

// Detect Language
function detectLanguage(code) {
    if (code.includes("#include") || code.includes("printf"))
        return "C";
    if (code.includes("cout") || code.includes("std::"))
        return "CPP";
    if (code.includes("System.out"))
        return "Java";
    if (code.includes("print("))
        return "Python";
    return "Unknown";
}

// Lexical Analyzer
function lexicalAnalysis(code) {
    return code.match(/[A-Za-z_]\w*|[0-9]+|[\(\){};=+\-*/]/g);
}

// Simple Syntax Checking
function syntaxCheck(language, code) {
    if (language === "C" && !code.includes("main"))
        return "Error: C program must contain main().";

    if (language === "CPP" && !code.includes("main"))
        return "Error: C++ program must contain main().";

    if (language === "Java" && !code.includes("class"))
        return "Error: Java program must have a class.";

    if (language === "Python" && !code.includes("print"))
        return "Error: Python code must contain print().";

    return "Syntax OK";
}

// IR Generator
function generateIR(tokens) {
    let ir = [];
    tokens.forEach(t => {
        if (/^[0-9]+$/.test(t)) ir.push("LOAD_CONST " + t);
        else if (t === "=") ir.push("STORE_VAR");
        else if (/^[A-Za-z_]\w*$/.test(t)) ir.push("IDENTIFIER " + t);
    });
    return ir;
}

// Execution Simulation
function execute(language) {
    switch (language) {
        case "C": return "Executing: C Machine Code Simulation.";
        case "CPP": return "Executing: C++ Object Code Simulation.";
        case "Java": return "Executing: JVM Bytecode Simulation.";
        case "Python": return "Executing: Python Bytecode Simulation.";
        default: return "Cannot Execute.";
    }
}

// MAIN FUNCTION
function compileCode() {
    const code = document.getElementById("codeInput").value;
    const outputBox = document.getElementById("outputBox");

    if (code.trim() === "") {
        outputBox.textContent = "Please enter code!";
        return;
    }

    let lang = detectLanguage(code);
    let tokens = lexicalAnalysis(code) || [];
    let syntax = syntaxCheck(lang, code);
    let ir = generateIR(tokens);

    let finalOutput =
        `Detected Language: ${lang}\n\n` +
        `Tokens: ${JSON.stringify(tokens)}\n\n` +
        `Syntax Check: ${syntax}\n\n` +
        `Intermediate Code:\n${ir.join("\n")}\n\n` +
        execute(lang);

    outputBox.textContent = finalOutput;
}


