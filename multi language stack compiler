        <button onclick="compileCode()">Compile</button>
        <button onclick="convertToC()">Convert to C</button>
        <button onclick="convertToCPP()">Convert to C++</button>

        <!-- Converted Code Section -->
        <div class="output-section">
            <h3>Converted Code</h3>
            <pre id="convertOutput"></pre>
        </div>

